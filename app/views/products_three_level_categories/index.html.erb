<%- model_class = ProductsThreeLevelCategory -%>
    <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
        <%= link_to t('.new', :default => t("helpers.links.new")),
            new_products_three_level_category_path,
            :class => 'btn btn-primary' %>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <%= model_class.human_attribute_name(:id) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:product_id) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:third_level_id) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:created_at) %>
                </th>
                <th>
                    <%=t '.actions', :default => t("helpers.actions") %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @products_three_level_categories.each do |products_three_level_category| %>
                <tr>
                    <td>
                        <%= link_to products_three_level_category.id, products_three_level_category_path(products_three_level_category) %>
                    </td>
                    <td>
                        <%= products_three_level_category.product_id %>
                    </td>
                    <td>
                        <%= products_three_level_category.third_level_id %>
                    </td>
                    <td>
                        <%=l products_three_level_category.created_at %>
                    </td>
                    <td>
                        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_products_three_level_category_path(products_three_level_category), :class => 'btn btn-default btn-xs' %>
                            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      products_three_level_category_path(products_three_level_category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
