<%- model_class = ThreeLevelCategory -%>
    <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
        <%= link_to t('.new', :default => t("helpers.links.new")),
            new_three_level_category_path,
            :class => 'btn btn-primary' %>
            </h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <%= model_class.human_attribute_name(:id) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:name) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:parent_id) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:level) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:created_at) %>
                </th>
                <th>
                    <%=t '.actions', :default => t("helpers.actions") %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @three_level_categories.each do |three_level_category| %>
                <tr>
                    <td>
                        <%= link_to three_level_category.id, three_level_category_path(three_level_category) %>
                    </td>
                    <td>
                        <%= three_level_category.name %>
                    </td>
                    <td>
                        <%= three_level_category.parent_id %>
                    </td>
                    <td>
                        <%= three_level_category.level %>
                    </td>
                    <td>
                        <%=l three_level_category.created_at %>
                    </td>
                    <td>
                        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_three_level_category_path(three_level_category), :class => 'btn btn-default btn-xs' %>
                            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      three_level_category_path(three_level_category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
