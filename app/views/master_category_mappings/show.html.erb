<%- model_class = MasterCategoryMapping -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:third_level_id) %>:</strong></dt>
  <dd><%= @master_category_mapping.third_level_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:revised_second_level_id) %>:</strong></dt>
  <dd><%= @master_category_mapping.revised_second_level_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:current_second_level_id) %>:</strong></dt>
  <dd><%= @master_category_mapping.current_second_level_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              master_category_mappings_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_master_category_mapping_path(@master_category_mapping), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              master_category_mapping_path(@master_category_mapping),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
