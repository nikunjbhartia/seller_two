<%- model_class = Category -%>
    <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
        <%= link_to t('.new', :default => t("helpers.links.new")),
            new_category_path,
            :class => 'btn btn-primary' %>
            </h1>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    <%= model_class.human_attribute_name(:id) %>
                </th>
                <!-- <th><%= model_class.human_attribute_name(:cat_picture) %></th> -->
                <th>
                    <%= model_class.human_attribute_name(:name) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:order_no) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:parent_id) %>
                </th>
                <th>
                    <%= model_class.human_attribute_name(:status) %>
                </th>

                <% if false %>
                <th>
                    <%= model_class.human_attribute_name(:category_type) %>
                </th>
                <% end %>

                <th>
                    <%= model_class.human_attribute_name(:old_name) %>
                </th>
                <th>
                    <%=t '.actions', :default => t("helpers.actions") %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
                <tr>
                    <td>
                        <%= link_to category.id, category_path(category) %>
                    </td>
                    <!-- <td><%= category.cat_picture %></td> -->
                    <td>
                        <%= category.name %>
                    </td>
                    <td>
                        <%= category.order_no %>
                    </td>
                    <td>
                        <%= category.parent_id %>
                    </td>
                    <td>
                        <%= category.status %>
                    </td>

                    <% if false %>
                    <td>
                        <%= category.category_type %>
                    </td>
                    <% end %>

                    <td>
                        <%= category.old_name %>
                    </td>
                    <td>
                        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_category_path(category), :class => 'btn btn-default btn-xs' %>
                            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      category_path(category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
